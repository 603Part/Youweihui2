<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/home_layout_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/home_radio_group" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/home_radio_group"
        android:background="@color/gray" />

    <RadioGroup
        android:id="@+id/home_radio_group"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/group_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_home"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="3dp"
            android:text="首页"
            android:textColor="@drawable/selector_home_text"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/group_tail_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_tail_order"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="3dp"
            android:text="实时尾单"
            android:textColor="@drawable/selector_home_text"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/group_forum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_forum"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="3dp"
            android:text="发现"
            android:textColor="@drawable/selector_home_text"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/group_shop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_shop"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="3dp"
            android:text="积分商城"
            android:textColor="@drawable/selector_home_text"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/group_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_my"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="3dp"
            android:text="个人中心"
            android:textColor="@drawable/selector_home_text"
            android:textSize="12sp" />
    </RadioGroup>
</RelativeLayout>