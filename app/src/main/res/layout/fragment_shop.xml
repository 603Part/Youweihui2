<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_shop_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.youweihui.tourismstore.view.CustomScrollView
            android:id="@+id/shop_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.youweihui.tourismstore.view.BannerView
                        android:id="@+id/shop_banner"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:id="@+id/shop_linear"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="40dp"
                            android:layout_height="0.5dp"
                            android:layout_gravity="center"
                            android:background="@color/gray" />

                        <TextView
                            android:id="@+id/shop_top_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:textColor="@color/text_color" />

                        <View
                            android:layout_width="40dp"
                            android:layout_height="0.5dp"
                            android:layout_gravity="center"
                            android:background="@color/gray" />
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/shop_top_recycle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <LinearLayout
                        android:id="@+id/shop_linear1"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="40dp"
                            android:layout_height="0.5dp"
                            android:layout_gravity="center"
                            android:background="@color/gray" />

                        <TextView
                            android:id="@+id/shop_center_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:textColor="@color/text_color" />

                        <View
                            android:layout_width="40dp"
                            android:layout_height="0.5dp"
                            android:layout_gravity="center"
                            android:background="@color/gray" />
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/shop_center_recycle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <LinearLayout
                        android:id="@+id/shop_linear2"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="40dp"
                            android:layout_height="0.5dp"
                            android:layout_gravity="center"
                            android:background="@color/gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:text="更多产品" />

                        <View
                            android:layout_width="40dp"
                            android:layout_height="0.5dp"
                            android:layout_gravity="center"
                            android:background="@color/gray" />
                    </LinearLayout>

                    <android.support.design.widget.TabLayout
                        android:id="@+id/shop_tb_seat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        app:tabGravity="fill"
                        app:tabIndicatorColor="@color/orange"
                        app:tabMaxWidth="0dp"
                        app:tabMode="fixed"
                        app:tabSelectedTextColor="@color/orange" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/line" />

                    <com.youweihui.tourismstore.view.NoScrollViewPager
                        android:id="@+id/shop_view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <android.support.design.widget.TabLayout
                    android:id="@+id/shop_tb_real"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:visibility="invisible"
                    app:tabIndicatorColor="@color/orange"
                    app:tabMode="scrollable"
                    app:tabSelectedTextColor="@color/orange" />
            </FrameLayout>
        </com.youweihui.tourismstore.view.CustomScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>