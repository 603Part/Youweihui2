<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.youweihui.tourismstore.view.CustomScrollView
        android:id="@+id/special_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <com.youweihui.tourismstore.view.BannerView
                    android:id="@+id/special_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/special_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="专题活动"
                    android:textColor="@color/white"
                    android:textSize="17.5sp" />

                <ImageButton
                    android:id="@+id/special_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:background="@null"
                    android:src="@mipmap/ic_back2" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/special_nav_text1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@mipmap/ic_home_1"
                    android:gravity="center"
                    android:text="亚洲"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/special_nav_text2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@mipmap/ic_home_2"
                    android:gravity="center"
                    android:text="欧洲"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/special_nav_text3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@mipmap/ic_home_3"
                    android:gravity="center"
                    android:text="非洲"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/special_nav_text4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@mipmap/ic_home_3"
                    android:gravity="center"
                    android:text="美国"
                    android:textColor="@color/white" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/default_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/special_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="false" />
            </RelativeLayout>
        </LinearLayout>
    </com.youweihui.tourismstore.view.CustomScrollView>

    <RelativeLayout
        android:id="@+id/special_relative"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <RelativeLayout
            android:id="@+id/special_back2"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_back3" />
        </RelativeLayout>

        <TextView
            android:id="@+id/special_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="专题活动"
            android:textColor="@color/gray3"
            android:textSize="16dp"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>