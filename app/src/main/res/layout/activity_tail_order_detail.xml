<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tail_order_detail_bottom_linear"
        android:orientation="vertical">

        <com.youweihui.tourismstore.view.CustomScrollView
            android:id="@+id/tail_order_detail_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/tail_order_relative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/theme"
                        android:focusable="true"
                        android:focusableInTouchMode="true">

                        <ImageView
                            android:id="@+id/tail_order_detail_top_img"
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:background="@color/gray"
                            android:scaleType="fitXY" />

                        <ImageButton
                            android:id="@+id/tail_order_detail_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="30dp"
                            android:background="@null"
                            android:src="@mipmap/ic_back2" />

                        <TextView
                            android:id="@+id/tail_order_detail_hot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="180dp"
                            android:text="热度:9999"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="180dp"
                            android:layout_marginRight="10dp"
                            android:text="最近预定:9999笔"
                            android:textColor="@color/white" />

                        <LinearLayout
                            android:id="@+id/tail_order_detail_linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tail_order_detail_hot"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="9dp"
                            android:background="@drawable/shp_tail_order_detail_bg"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:maxLines="2"
                                android:text="阿布扎比魅力四射的多元文化、动人心魄的奢华体验、惊险刺激的探险经历和阿拉伯人的热情好客等待您来发现。"
                                android:textColor="@color/text_color" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="¥ 999"
                                    android:textColor="@color/orange"
                                    android:textSize="16dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:layout_weight="1"
                                    android:text="起/人"
                                    android:textSize="12dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:text="编号:1232131"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/default_bg" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:drawableLeft="@mipmap/ic_tail_order_detail_go"
                                    android:drawablePadding="3dp"
                                    android:text="北京出发"
                                    android:textColor="@color/default_blue"
                                    android:textSize="12dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:drawableLeft="@mipmap/ic_tail_order_detail_back"
                                    android:drawablePadding="3dp"
                                    android:text="4天行程"
                                    android:textColor="@color/default_blue"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:background="@color/default_bg" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@color/white">

                                <LinearLayout
                                    android:id="@+id/home_tail_order_linear"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="40dp"
                                        android:layout_height="0.5dp"
                                        android:layout_gravity="center"
                                        android:background="@color/gray" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:gravity="center"
                                        android:text="出发日期"
                                        android:textColor="@color/text_color" />

                                    <View
                                        android:layout_width="40dp"
                                        android:layout_height="0.5dp"
                                        android:layout_gravity="center"
                                        android:background="@color/gray" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="44dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="10dp"
                                    android:drawableRight="@mipmap/ic_home_more"
                                    android:drawablePadding="3dp"
                                    android:gravity="center"
                                    android:text="更多日期"
                                    android:textSize="13sp" />
                            </RelativeLayout>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/tail_order_detail_recycle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:nestedScrollingEnabled="false" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/default_bg" />

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tail_order_tb_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        app:tabGravity="fill"
                        app:tabSelectedTextColor="@color/orange" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/tail_order_detail_recycle3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/home_tail_order_linear2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@color/white"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="40dp"
                                android:layout_height="0.5dp"
                                android:layout_gravity="center"
                                android:background="@color/gray" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:text="热门路线推荐" />

                            <View
                                android:layout_width="40dp"
                                android:layout_height="0.5dp"
                                android:layout_gravity="center"
                                android:background="@color/gray" />
                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/tail_order_detail_recycle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/home_tail_order_linear2"
                            android:background="@color/white"
                            android:nestedScrollingEnabled="false" />
                    </RelativeLayout>
                </LinearLayout>

                <android.support.design.widget.TabLayout
                    android:id="@+id/tail_order_tb_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:visibility="invisible"
                    app:tabSelectedTextColor="@color/orange" />
            </FrameLayout>
        </com.youweihui.tourismstore.view.CustomScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tail_order_detail_bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_call"
            android:gravity="center"
            android:text="电话"
            android:textSize="12sp" />

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="@color/default_bg" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_ser"
            android:gravity="center"
            android:text="客服" />

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="@color/default_bg" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_mark"
            android:gravity="center"
            android:text="收藏" />

        <TextView
            android:id="@+id/goods_detail_start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/orange"
            android:gravity="center"
            android:text="开始预订"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>