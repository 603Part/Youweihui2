<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="212dp"
    android:id="@+id/item_shop_center_relative"
    android:background="@color/white">

    <ImageView
        android:id="@+id/item_shop_center_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/item_shop_center_title"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/item_shop_center_title"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_shop_center_integral"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/item_shop_center_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/orange"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/item_shop_center_change"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shp_shop_bg"
        android:gravity="center"
        android:text="兑换"
        android:textColor="@color/white"
        android:textSize="11dp" />
</RelativeLayout>
