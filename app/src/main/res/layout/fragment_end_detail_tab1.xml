<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/end_detail_tab1_img"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/yellow"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/ic_bell" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="环球网军事12月29日报道28日，韩国总统文在寅视察驻扎在京畿道涟川郡的陆军第五步兵师新兵集训队，检查韩军的戒备态势。韩国《中央日报》称，这是文在寅执政以来，首次视察前线部队。在他发表演讲时，背后的屏幕出现了9个汉字：天下无敌，常胜五师团。"
            android:textColor="@color/yellow2"
            android:textSize="11sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ic_right_arrow2" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/end_detail_tab1_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/end_detail_tab1_recycle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:overScrollMode="never"
        android:scrollbars="none" />
</LinearLayout>